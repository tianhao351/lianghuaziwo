page, picker {
    width: 100%;
    height: 100%;
}

view, text {
    color: #333;
    display: block;
}

scroll-view {
    width: 100%;
    height: 100%;
}

.container {
    height: 100%;
    width: 100%;
    padding: 20rpx 0 120rpx;
    box-sizing: border-box;
    position: relative;
}

.userinfo-avatar {
    width: 150rpx;
    height: 150rpx;
    display: block;
    margin: 0 auto;
}

.userinfo-nickname {
    font-size: 28rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    display: block;
}

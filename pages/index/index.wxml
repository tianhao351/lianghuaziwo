                            <text>非常不同意</text>
                        </radio>
                    </radio-group>
                </view>
            </block>
        </view>
    </scroll-view>

    <view class="btn-wrap">
        <view bindtap="next">{{ step < 2 ? '下一步' : '保存' }}</view>
    </view>
</view>

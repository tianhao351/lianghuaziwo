.step-wrap {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: column;
}

.text-wrap {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.step-text {
    font-size: 80rpx;
    font-weight: bold;
    text-align: center;
}

.desc {
    color: #ccc;
    font-size: 24rpx;
    text-align: center;
}

.desc.red {
    color: red;
}

.desc.green {
    color: chartreuse;
}

.hint-wrap {
    height: 192rpx;
}

.hint-wrap view {
    font-size: 24rpx;
    line-height: 32rpx;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
}

.desc-wrap {
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: #fff;
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx 20rpx;
}

.step-wrap image {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}

.title {
    text-align: center;
    padding: 20rpx 60rpx;
    height: 96rpx;
}

.radio {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.radio view {
    font-size: 28rpx;
    line-height: 2;
    color: #ccc;
    padding: 20rpx 0;
}

.radio input {
    border: 1rpx solid #ccc;
    width: 500rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    height: 60rpx;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
}

.input-wrap {
    position: absolute;
    background-color: #fff;
    width: 600rpx;
    height: 380rpx;
    border-radius: 10rpx;
    top: 50%;
    left: 50%;
    margin: -190rpx 0 0 -300rpx;
    box-sizing: border-box;
    padding: 40rpx 0;
}

.input-wrap .input {
    position: relative;
    padding: 0 40rpx;
    width: 100%;
    box-sizing: border-box;
}

.input-wrap input {
    border: 1rpx solid #ccc;
    box-sizing: border-box;
    width: 100%;
    height: 82rpx;
    line-height: 60rpx;
    padding: 10rpx 80rpx 10rpx 80rpx;
    border-radius: 10rpx;
    text-align: center;
}

.input-desc {
    position: absolute;
    right: 40rpx;
    top: 0;
    background-color: #ccc;
    width: 80rpx;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-top: 1rpx solid #ccc;
    margin-top: 40rpx;
}
